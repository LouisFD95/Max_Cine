  <script>
    const films = [
      {
        titre: 'Joker: Folie √† Deux',
        image: 'https://image.tmdb.org/t/p/w500/8uO0gUM8aNqYLs1OsTBQiXu0fEv.jpg',
        date: '2 octobre 2025',
        synopsis: 'La suite du Joker de Todd Phillips, explorant la relation entre Arthur Fleck et Harley Quinn.',
        note: '8.7'
      },
      {
        titre: 'Deadpool & Wolverine',
        image: 'https://image.tmdb.org/t/p/w500/fzKWwcaam9QSTaMSJlORuSojxio.jpg',
        date: '24 juillet 2024',
        synopsis: 'Deadpool fait √©quipe avec Wolverine dans une aventure d√©lirante √† travers le multivers.',
        note: '8.3'
      },
      {
        titre: 'Dune: Deuxi√®me Partie',
        image: 'https://image.tmdb.org/t/p/w500/dune2poster.jpg',
        date: '1er mars 2024',
        synopsis: 'Paul Atr√©ides s‚Äôallie aux Fremen pour se venger des conspirateurs qui ont d√©truit sa famille.',
        note: '8.8'
      },
      {
        titre: 'Venom: The Last Dance',
        image: 'https://image.tmdb.org/t/p/w500/venom3poster.jpg',
        date: '24 octobre 2025',
        synopsis: 'Eddie Brock et Venom affrontent leur destin dans le dernier chapitre explosif de la saga.',
        note: '7.9'
      }
    ];

    const filmsContainer = document.getElementById('filmsContainer');

    function afficherFilms(liste) {
      filmsContainer.innerHTML = '';
      liste.forEach(film => {
        const filmEl = document.createElement('div');
        filmEl.classList.add('film');
        filmEl.innerHTML = `
          <img src="${film.image}" alt="${film.titre}" />
          <div class="film-info">
            <h2>${film.titre}</h2>
            <p><strong>Date de sortie :</strong> ${film.date}</p>
            <p>${film.synopsis}</p>
            <p class="note">‚≠ê ${film.note}/10</p>
          </div>
        `;
        filmsContainer.appendChild(filmEl);
      });
    }

    afficherFilms(films);

    document.getElementById('searchInput').addEventListener('input', (e) => {
      const recherche = e.target.value.toLowerCase();
      const filtres = films.filter(film => film.titre.toLowerCase().includes(recherche));
      afficherFilms(filtres);
    });
  </script>
